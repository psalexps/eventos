{% extends "templates/indexLayout.html.twig" %}

{% block contenido %}
    <div class="row text-center justify-content-center mt-3 mb-3">

        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mb-12">

                    {% for local in locales %}
                        <div class="col-4 card pt-4 pb-4">
                            <h1 class="mb-4">{{ local.nombre|capitalize }}</h1>
                            <p><strong>Categoría:</strong> {{ local.categoria|capitalize }}</p>
                            <p><strong>Dirección:</strong> {{ local.direccion|capitalize }}</p>
                            <p><strong>Teléfono:</strong> {{ local.telefono }}</p>
                            <span id="botonesAcciones" class="justify-content-center">
                                <button id="modificar" class="btn btn-outline-warning" data-toggle="modal" data-target="#modalModificar" data-idlocal="{{ local.idLocal }}" data-nombre="{{ local.nombre }}" data-categoria="{{ evento.categoria }}" data-direccion="{{ evento.direccion }}" data-telefono="{{ evento.telefono }}" data-email="{{ evento.email }}"><span class="far fa-edit"></span></button>
                                <button id="borrar" class="btn btn-outline-danger btn-rounded borrar" onclick="return eliminar({{ local.idLocal }})"><span class="far fa-trash-alt"></span></button>
                            </span>
                        </tr>
                    {% endfor %}
        </div>

    </div>

    <div class="modal fade" id="modalModificar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modalModificarBorder" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Modificar local</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">

                    <form id="formModificar" action="#" method="post" onsubmit="return modificar()">
                        <input type="hidden" name="idEvento" id="idEvento">
                        <div class="md-form">
                            <p>Nombre</p>
                            <label for="nombreEvento"></label>
                            <input type="text" class="form-control nombreEvento" id="nombreEvento" name="nombreEvento" required>
                        </div>
                        <div class="md-form">
                            <p>Categoría</p>
                            <label for="categoriaLocal"></label>
                            <input type="text" class="form-control categoriaLocal" id="categoriaLocal" name="categoriaLocal">
                        </div>
                        <div class="md-form">
                            <p>Dirección</p>
                            <label for="direccionLocal"></label>
                            <input type="text" class="form-control direccionLocal" id="direccionLocal" name="direccionLocal">
                        </div>
                        <div class="md-form">
                            <p>Teléfono</p>
                            <label for="telefonoLocal"></label>
                            <input class="form-control telefonoLocal" id="telefonoLocal" name="telefonoLocal"></input>
                        </div>
                        <div class="md-form">
                            <p>Email</p>
                            <label for="emailLocal"></label>
                            <input class="form-control emailLocal" id="emailLocal" name="emailLocal"></input>
                        </div>
                        <div class="md-form justify-content-between">
                            <button type="button" class="btn btn-light float-left" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary float-right">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="centralModalSuccess" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-notify modal-success" role="document">

            <div class="modal-content">

                <div class="modal-header">
                    <p class="heading lead">Datos Actualizados con exito</p>
                </div>

                <div class="modal-body">
                    <div class="text-center">
                        <i class="fas fa-check fa-4x mb-3 animated rotateIn"></i>
                    </div>
                </div>

                <div class="modal-footer justify-content-center">
                    <a type="button" id="actualizarPagina" class="btn btn-success" data-dismiss="modal">✔</a>
                </div>
            </div>

        </div>
    </div>


    <div class="modal fade" id="eliminarLocal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-notify modal-danger" role="document">

            <div class="modal-content">

                <div class="modal-header">
                    <p class="heading">Seguro que deseas eliminar este local</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <a type="button" id="confirmarBorrado" class="btn btn-danger">✔</a>
                    <a type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal">❌</a>
                </div>
            </div>

        </div>
    </div>
{% endblock %}